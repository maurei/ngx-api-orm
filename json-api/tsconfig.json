{
    "angularCompilerOptions": {
        "strictMetadataEmit": false
    },
    "compilerOptions": {
        "baseUrl": "../.",
        "declaration": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "noFallthroughCasesInSwitch": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "../.",
        "paths": {                
        },
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types/"
        ],
        "paths": {
            "@angular/*": [
                "../../node_modules/@angular/*"
            ],
            "@rxjs/*": [
                "../../node_modules/rxjs/*"
            ],
            "@ngx-api-orm/core": [
                "./core/src"
            ],  
        },
    },
    "exclude": [
        "node_modules"
    ]
}